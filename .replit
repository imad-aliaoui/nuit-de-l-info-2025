modules = ["php-8.2", "nodejs-20"]
[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend PHP API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend React"

[[workflows.workflow]]
name = "Backend PHP API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && php -S 0.0.0.0:8000 -t public"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend React"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 42945
externalPort = 3000
